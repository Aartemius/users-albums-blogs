{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/prop-types": "off",
        "object-curly-spacing": [
          "warn",
          "always"
        ],
        "react/jsx-curly-spacing": [
          "warn",
          {
              "when": "always",
              "children": true,
              "spacing": {
                  "objectLiterals": "never"
              }
          }
        ],
        "no-unused-vars": "warn",
        "no-console": ["warn", { "allow": ["error"] }],
        "max-params": ["warn", 2],
        "no-multi-spaces": "warn"
    }
}
